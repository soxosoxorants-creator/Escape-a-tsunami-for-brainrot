})

TabBrainrots:CreateButton({
    Name = "Instant Grab All",
    Callback = function()
        local folder = workspace:FindFirstChild("Brainrots") or workspace:FindFirstChild("Drops")
        if folder then
            for _, v in pairs(folder:GetDescendants()) do
                if v:IsA("ProximityPrompt") then fireproximityprompt(v) end
            end
        end
    end
})

