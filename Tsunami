-- VARIABLES (The "Switches")
local InfiniteJumpEnabled = false
local NoclipEnabled = false
local HitboxEnabled = false
local AutoRebirthEnabled = false
local AutoCashEnabled = false
local TsunamiAlertEnabled = false
local ESPEnabled = false
local ExtraLifeEnabled = false

_G.JumpPowerValue = 50
_G.SpeedHackValue = 16
_G.HitboxSizeValue = 10

-- TWEEN FUNCTION (For Gaps)
local function TweenTo(pos, time)
    local char = game.Players.LocalPlayer.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        local hrp = char.HumanoidRootPart
        hrp.Anchored = true
        local tween = game:GetService("TweenService"):Create(hrp, TweenInfo.new(time, Enum.EasingStyle.Linear), {CFrame = CFrame.new(pos)})
        tween:Play()
        tween.Completed:Connect(function() hrp.Anchored = false end)
    end
end

