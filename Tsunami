---------------------------------------------------------
-- THE ENGINE (LOOPS)
---------------------------------------------------------

-- Speed & Jump Power
task.spawn(function()
    while task.wait(0.1) do
        local hum = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
        if hum then
            hum.WalkSpeed = _G.SpeedHackValue
            hum.JumpPower = _G.JumpPowerValue
            hum.UseJumpPower = true
            if ExtraLifeEnabled then hum.Health = hum.MaxHealth end
        end
    end
end)

-- Noclip
game:GetService("RunService").Stepped:Connect(function()
    if NoclipEnabled and game.Players.LocalPlayer.Character then
        for _, v in pairs(game.Players.LocalPlayer.Character:GetChildren()) do
            if v:IsA("BasePart") then v.CanCollide = false end
        end
    end
end)

-- Inf Jump
game:GetService("UserInputService").JumpRequest:Connect(function()
    if InfiniteJumpEnabled and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
        game.Players.LocalPlayer.Character.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
    end
end)

-- Hitbox Expander Loop
task.spawn(function()
    while task.wait(2) do
        if HitboxEnabled then
            for _, v in pairs(workspace:GetDescendants()) do
                if v:IsA("TouchTransmitter") and v.Parent:IsA("BasePart") then
                    v.Parent.Size = Vector3.new(_G.HitboxSizeValue, _G.HitboxSizeValue, _G.HitboxSizeValue)
                    v.Parent.CanCollide = false
                end
            end
        end
    end
end)

-- Auto Rebirth & Cash
task.spawn(function()
    while task.wait(1) do
        if AutoRebirthEnabled then
            local rem = game:GetService("ReplicatedStorage"):FindFirstChild("Rebirth", true)
            if rem then rem:FireServer() end
        end
        if AutoCashEnabled then
            for _, v in pairs(workspace:GetDescendants()) do
                if (v.Name == "Cash" or v.Name == "Coin") and (game.Players.LocalPlayer.Character.HumanoidRootPart.Position - v.Position).Magnitude < 150 then
                    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame
                end
            end
        end
    end
end)

Rayfield:Notify({Title = "Brainrot Hub Ready", Content = "Script successfully executed!", Duration = 5})
